<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫描打开电子锁"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择图片并解析（仅用于测试）"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button1"
        />



    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试生成二维码图片（仅用于测试）"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/button2"
        />

        <Button
        android:id="@+id/btn_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帮我找个座位"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/button4"
        />

        <Button
        android:id="@+id/btn_myseat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的椅子"
        android:layout_marginTop="20dp"
            android:layout_below="@+id/btn_seek"
            android:layout_alignLeft="@+id/btn_seek"
            android:layout_alignStart="@+id/btn_seek"
            android:layout_alignRight="@+id/btn_seek"
            android:layout_alignEnd="@+id/btn_seek" />

        <Button
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我要预约"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/btn_myseat"
        />

         <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_order"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="设置通讯连接"
        />

</RelativeLayout>
